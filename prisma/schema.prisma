generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Folder {
  id    Int    @id @default(autoincrement())
  name  String @unique
  files File[]
}

model File {
  id         Int      @id @default(autoincrement())
  name       String
  size       Float
  uploadTime DateTime
  folder     Folder?  @relation(fields: [folderId], references: [id])
  folderId   Int?
}
